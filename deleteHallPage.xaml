<Page x:Class="FitnessClubDesktopApp.deleteHallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitnessClubDesktopApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="deleteHallPage">

    <Grid>
        <Grid Background="#FF2E3349" RenderTransformOrigin="0.545,0.514">

            <GroupBox BorderBrush="{x:Null}" BorderThickness="0">
                <StackPanel Margin="400,55,0,0">
                    <TextBlock Foreground="#FF9EA1B0" FontSize="16" VerticalAlignment="Center" Height="20">Номер зала</TextBlock>
                    <TextBox x:Name="textBoxID" FontSize="14" HorizontalAlignment="Left" Height="20"  TextWrapping="Wrap" VerticalAlignment="Top" Width="302" BorderBrush="White" Background="{x:Null}" BorderThickness="0,0,0,1" Foreground="White" TextChanged="textBoxID_TextChanged"/>
                    <TextBlock Foreground="#FF9EA1B0" FontSize="16" VerticalAlignment="Center" Height="20">Название</TextBlock>
                    <TextBox IsEnabled="False" x:Name="textBoxName" FontSize="14" HorizontalAlignment="Left" Height="20"  TextWrapping="Wrap" VerticalAlignment="Top" Width="302" BorderBrush="White" Background="{x:Null}" BorderThickness="0,0,0,1" Foreground="White"/>
                    <Button x:Name="btnDeleteHall" Margin="0,20,210,0" Width="301" Content="Удалить" Background="{x:Null}" BorderBrush="White" Foreground="White" BorderThickness="2" Click="btnDeleteHall_Click" MouseMove="btnDeleteHall_MouseMove" MouseLeave="btnDeleteHall_MouseLeave"/>
                    <DataGrid  Margin="-106,20,0,0" x:Name="hallRelation" Height="182" Background="White" CanUserReorderColumns="False" CanUserSortColumns="False" CanUserResizeRows="False" CanUserResizeColumns="False" IsReadOnly="True" AutoGenerateColumns="False" MouseDoubleClick="hallRelation_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер" Binding="{Binding H_ID}" Width="*"/>
                            <DataGridTextColumn Header="Название зала" Binding="{Binding H_NAME}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Page>
